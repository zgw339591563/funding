<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.atguigu.atcrowdfunding.user.dao.PermissionDao">

    <select id="queryById" resultType="permission">
        select * from t_permission where id = #{id}
    </select>

    <select id="queryRootPermissions" resultType="permission">
        select * from t_permission where pid is null
    </select>
    
    <select id="queryChildrenPermissionsByPid" resultType="permission">
        select * from t_permission where pid = #{pid}
    </select>
    
    <select id="queryAll" resultType="permission">
        select * from t_permission
    </select>

    <insert id="insertPermission">
        insert into t_permission (
            name, pid, icon, url
        ) values (
            #{name}, #{pid}, #{icon}, #{url}
        )
    </insert>
    
    <update id="updatePermission">
        update t_permission
        set
            name = #{name},
            url = #{url}
        where id = #{id}
    </update>
    
    <delete id="deletePermissionById">
        delete from t_permission where id = #{id}
    </delete>
</mapper>